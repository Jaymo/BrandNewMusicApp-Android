<?xml version="1.0" encoding="utf-8"?>


<resources>
    
    <style name="Theme.MyTheme" parent="@android:style/Theme.Light" />

    <style name="Theme.Bnm_actionbar" parent="@style/Theme.Sherlock.Light">
        <item name="actionBarItemBackground">@drawable/selectable_background_bnm_actionbar</item>
        <item name="popupMenuStyle">@style/PopupMenu.Bnm_actionbar</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Bnm_actionbar</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Bnm_actionbar</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Bnm_actionbar</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Bnm_actionbar</item>
        <item name="actionModeBackground">@drawable/cab_background_top_bnm_actionbar</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_bnm_actionbar</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Bnm_actionbar</item>
   
    </style>

    <style name="ActionBar.Solid.Bnm_actionbar" parent="@style/Widget.Sherlock.Light.ActionBar.Solid">
        <item name="background">@drawable/ab_solid_bnm_actionbar</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_bnm_actionbar</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_bnm_actionbar</item>
        <item name="progressBarStyle">@style/ProgressBar.Bnm_actionbar</item>
    </style>

    <style name="ActionBar.Transparent.Bnm_actionbar" parent="@style/Widget.Sherlock.Light.ActionBar">
        <item name="background">@drawable/ab_transparent_bnm_actionbar</item>
        <item name="progressBarStyle">@style/ProgressBar.Bnm_actionbar</item>
    </style>
	
    <style name="PopupMenu.Bnm_actionbar" parent="@style/Widget.Sherlock.Light.ListPopupWindow">	
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_bnm_actionbar</item>	
    </style>
	
    <style name="DropDownListView.Bnm_actionbar" parent="@style/Widget.Sherlock.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_bnm_actionbar</item>
    </style>

    <style name="ActionBarTabStyle.Bnm_actionbar" parent="@style/Widget.Sherlock.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_bnm_actionbar</item>
    </style>
	
    <style name="DropDownNav.Bnm_actionbar" parent="@style/Widget.Sherlock.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_bnm_actionbar</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_bnm_actionbar</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_bnm_actionbar</item>
    </style>
    
    <style name="ProgressBar.Bnm_actionbar" parent="@style/Widget.Sherlock.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_bnm_actionbar</item>
    </style>
    
    <style name="ActionButton.CloseMode.Bnm_actionbar" parent="@style/Widget.Sherlock.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_bnm_actionbar</item>
    </style>
    
    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Bnm_actionbar.Widget" parent="@style/Theme.Sherlock">
        <item name="popupMenuStyle">@style/PopupMenu.Bnm_actionbar</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Bnm_actionbar</item>
    </style>

</resources>