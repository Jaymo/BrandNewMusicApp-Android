<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
  <PreferenceCategory android:title="@string/bnm_settings" >
      
       <SwitchPreference
            android:key="enable_notications"
             android:defaultValue="true"
            android:title="@string/notifications" />

        <SwitchPreference
            android:key="enable_sync"
            android:defaultValue="true"
            android:title="@string/sync" />
        
        <SwitchPreference
            android:key="enable_cache"
            android:defaultValue="false"
            android:title="@string/cache" />    
       </PreferenceCategory>
       
  
    
     <PreferenceCategory android:title="@string/about_bnm" >
        <Preference android:key="powered_preference" />
